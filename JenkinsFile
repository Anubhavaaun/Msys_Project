// Declarative //
pipeline {
    agent any

    stages {
        stage('Building the image') {
            steps {
                echo 'Building..'
            }
        }
        stage('Testing') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
// Script //
node {
    stage('Build') {
        echo 'Building....'
    }
    stage('Testing') {
        echo 'Building....'
    }
    stage('Deploy') {
        echo 'Deploying....'
    }
}
